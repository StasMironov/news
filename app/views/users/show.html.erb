<%= provide(:title, @user.name) %>
<div class="row">
<aside class="col-md-6">
<section class="user_info">
<h1>
    <%= gravatar_for @user %>
    <div class="users__name">
        <div>Имя: </div>
        <%= @user.name %>
    </div>
    <div class="users__email">
        <div>Email: </div>
        <%= @user.email %>
    </div>
</h1>
</section>

<h2>Создать объявление</h2>

<div class="row">
    <div class="col-md-12">
        <%= form_with scope: :micropost, url: microposts_path, html: { multipart: true }, local: true do |f| %>

            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>

            <%= f.label "Описание" %>
            <%= f.text_area :content, class: 'form-control' %>

            <div class="ms">
                <div><%= f.label "Активность" %></div>
                <div><%= f.check_box :status %></div>
            </div>

            <div>
                 <div><%= f.label "Теги" %></div>
                 <div><%= f.text_field :all_tags, class: 'form-control' %></div>
             </div>

            <div class="bt">
                <%= f.submit "Создать", class: "btn btn-primary" %>
            </div>
            <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
            <% end %>
    </div>
</div>
</aside>

<div class="col-md-6">
    <% if @user.microposts.any? %>
        <h3>Micropost(<%= @user.microposts.count  %>)</h3>
        <ol class="microposts">
            <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
</div>
</div>